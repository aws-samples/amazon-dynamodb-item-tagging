{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"module": "commonjs",
		"target": "es2019",
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"declaration": true,
		"declarationMap": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitUseStrict": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		".vscode",
		".git",
		".history",
		"./**/__mocks__/*.ts",
		"cdk.out"
	]
}